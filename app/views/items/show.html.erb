  .imghappycat {
    width: 40%
  }

  .itempostverifedit {
    display:flex;
    flex-grow: 10;
    display: flex;
    flex-wrap: nowrap;
    
  }
  
  @media (max-width: 800px) {
    .itempostverifedit {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }


  @media (max-width: 800px) {
    .myrow1 {
